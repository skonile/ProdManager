{% extends "default.html.twig" %}

{% block content %}
<div class="users-cont">
    <div class="heading-btn-cont">
        <div class="heading">
            <h1>Users</h1>
        </div>
        <div class="heading-btn-cont-inner">
            <a href="/user/add" class="btn btn-primary btn-round">Add User</a>
        </div>
    </div>

    <div class="users-cont-inner">
        <div class="users-table-cont">
            <table class="users-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Level</th>
                        <th>View/Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr class="user-item" data-brand-item="/user/{{ user.getId }}">
                        <td>{{ user.getId }}</td>
                        <td>{{ user.getName }} {% if currentUserId == user.getId %}(You){% endif %}</td>
                        <td>{{ user.getLastname }}</td>
                        <td>{{ user.getLevel.value }}</td>
                        <td>
                            <a href="/user/{{ user.getId }}" class="btn btn-primary btn-round btn-small">View</a>
                            <a href="/user/delete/{{ user.getId }}" class="btn btn-danger btn-round btn-small" onclick="confirmUserDeletion" data-user="{{ user.getName }}">Delete</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Level</th>
                        <th>View/Delete</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
{% endblock %}